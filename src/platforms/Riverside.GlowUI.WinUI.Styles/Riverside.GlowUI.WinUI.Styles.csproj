<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	</PropertyGroup>
	<ItemGroup Condition="'$(Configuration)' == 'Debug'">
		<ProjectReference Include="..\Riverside.Toolkit.WinUI.Controls\Riverside.Toolkit.WinUI.Controls.csproj" />
		<ProjectReference Include="..\Riverside.Toolkit.WinUI.Icons\Riverside.Toolkit.WinUI.Icons.csproj" />
		<ProjectReference Include="..\Riverside.Toolkit.WinUI.Converters\Riverside.Toolkit.WinUI.Converters.csproj" />
	</ItemGroup>
	<ItemGroup Condition="'$(Configuration)' == 'Release'">
		<PackageReference Include="Riverside.Toolkit.WinUI.Controls" Version="$(Version)" />
		<PackageReference Include="Riverside.Toolkit.WinUI.Icons" Version="$(Version)" />
		<PackageReference Include="Riverside.Toolkit.WinUI.Converters" Version="$(Version)" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="CommunityToolkit.WinUI.Media" Version="8.2.241112-preview1" />
	</ItemGroup>
</Project>