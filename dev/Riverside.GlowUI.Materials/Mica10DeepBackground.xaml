<Page
    x:Class="Cube.UI.Materials.Mica10DeepBackground"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Cube.UI.Materials"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tenmica="using:TenMica"
    mc:Ignorable="d">
    <Grid>
        <Grid x:Name="MicaDeepLayer" Background="{ThemeResource MicaDeepBackgroundBrush}" />
        <Grid x:Name="TenMicaLayer">
            <Grid.Background>
                <tenmica:TenMicaBrush EnabledInActivatedNotForeground="True" />
            </Grid.Background>
        </Grid>
    </Grid>
</Page>
